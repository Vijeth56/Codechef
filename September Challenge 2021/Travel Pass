#include <bits/stdc++.h>
#define ll long long int
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n, a, b;
    cin>>n>>a>>b;
    string s;
    cin>>s;
    int c0=0, c1=0;
    for(int i=0; i<s.size(); i++){
        if(s[i] == '0')
            c0+=1;
        else
            c1+=1;
    }
    int ans=(c0*a)+(c1*b);
    cout<<ans<<endl;
	}
	return 0;
}
